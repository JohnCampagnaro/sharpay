<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/show_my_orders_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryAlpha20"
        android:padding="16dp">

        <TextView
            android:id="@+id/show_my_orders_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="8dp"
            android:layout_toLeftOf="@+id/show_my_orders_switch"
            android:fontFamily="sans-serif-medium"
            android:text="@string/table_order_show_my_orders"
            android:textColor="@color/gray"
            android:textSize="12sp" />

        <android.support.v7.widget.SwitchCompat
            android:id="@+id/show_my_orders_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true" />
    </RelativeLayout>

    <android.support.v7.widget.ListViewCompat
        android:layout_below="@id/show_my_orders_layout"
        android:id="@+id/orders"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/button_pay"
        android:gravity="center"
        android:background="@android:color/white"
        android:textColor="@color/gray"
        android:text="@string/table_order_pay_button"
        android:fontFamily="sans-serif-medium"
        android:textSize="14sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:paddingBottom="25dp"
        android:paddingTop="25dp" />

</RelativeLayout>